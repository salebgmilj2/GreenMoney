    <div id="log-in-fb-or-member-popup" class="popup">
        <div class="popup-body"><span class="popup-exit"></span>
            <div class="popup-content">
                <h2 class="popup-title">Business Login</h2>
                <p class="popup-subtitle">Don't have an login? <a href="#" data-popup-target="#suplier-signin-popup">Create a page</a></p>
                    @using (Html.BeginForm("LoginTop", "Account", FormMethod.Post, new { role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        <p class="form-group">
                            <label class="popup-input-labels">Email address</label>
                            @Html.TextBoxFor(m => m.LoginViewModel.UserName, new {Class = "mailRgtrForm-field", type="email"})
                            @Html.ValidationMessageFor(m => m.LoginViewModel.UserName)
                        </p>
                        <p class="form-group">
                            <label class="popup-input-labels">Password</label>
                            @Html.PasswordFor(m => m.LoginViewModel.Password, new {Class = "mailRgtrForm-field"})
                            @Html.ValidationMessageFor(m => m.LoginViewModel.Password)                            
                        </p>

                        <input type="submit" class="btn popupBtn" value="Log in"/>
                        <input type="checkbox" name="remember" id="remember" class="vhide" style="background-color: red;float: left;margin: 0;">
                        <label class="rememberme-checkbox-label" for="remember">
                            <i class="octicon octicon-check"></i>Remember me
                        </label>
                        <a class="links pull-right" href="@Url.Action("ForgotPassword", "Account")">Forgot password?</a>
                    }
            </div>
        </div>
    </div>
