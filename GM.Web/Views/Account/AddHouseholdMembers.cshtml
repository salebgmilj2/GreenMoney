@model GM.ViewModels.AddHouseholdMembersViewModel
@{
    ViewBag.Title = "AddHouseholdMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-outer">
    <div class="navbar registration">
        <div class="row">
            <a class="navbar-brand col-md-3" href="@Url.Action("Index", "Home")">
                <img src="~/Images/logo.png" alt="">
            </a>
            <div class="col-md-9">
                <div class="container reg-wizard">

                    <div class="col-md-4 reg-wizard-step complete completed-step1">
                        <!-- completed -->
                        <div class="progress progress-completed">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#" class="reg-wizard-dot"></a>
                        <div class="reg-wizard-info text-center">Sign up</div>
                    </div>

                    <div class="col-md-4 reg-wizard-step complete">
                        <!-- complete -->
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#" class="reg-wizard-dot"></a>
                        <div class="reg-wizard-info text-center">Verify address</div>
                    </div>

                    <div class="col-md-3 reg-wizard-step active">
                        <!-- active -->
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#" class="reg-wizard-dot"></a>
                        <div class="reg-wizard-info text-center">Invite others</div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@*<form class="form-horizontal" action="" method="post" role="form">*@
@using (Html.BeginForm(new { @class = "form-horizontal" }))
{
    <div class="container main-form">
        <div class="container-inner">
            <div class="content-form text-center">
                <div class="row">
                    <div class="float-none row">
                        <h2>Add the members of your household</h2>
                        <p>
                            <b>Family members and housemates can have joint access to the account. Enter details below.</b></p>
<br>
                    </div>
                    @for (int i = 0; i < 4; i++)
                    {
                        <div id="member@(i)" class="float-none col-md-5 member@(i > 0 ? " hide" : null)">
                            <div class="row form-group firstNameField">
                                <label class="popup-input-labels">First name</label>
                                @Html.TextBoxFor(model => model.HouseholdMembers[i].FirstName, new { @class = "form-field form-control street-name" })
                                @Html.ValidationMessageFor(model => model.HouseholdMembers[i].FirstName)
                            </div>
                            <div class="row form-group lastNameField">
                                <label class="popup-input-labels">Last name</label>
                                @Html.TextBoxFor(model => model.HouseholdMembers[i].LastName, new { @class = "form-field form-control street-name" })
                                @Html.ValidationMessageFor(model => model.HouseholdMembers[i].LastName)
                            </div>
                            <div class="row form-group emailField">
                                <label class="popup-input-labels">Email address</label>
                                @Html.TextBoxFor(model => model.HouseholdMembers[i].Email, new { @class = "form-field form-control street-name", @type = "email" })
                                @Html.ValidationMessageFor(model => model.HouseholdMembers[i].Email)
                            </div>
                            <div class="row form-group confirmEmailField">
                                <label class="popup-input-labels">Confirm email</label>
                                @Html.TextBoxFor(model => model.HouseholdMembers[i].ConfirmEmail, new { @class = "form-field form-control street-name", @type = "email" })
                                @Html.ValidationMessageFor(model => model.HouseholdMembers[i].ConfirmEmail)
                            </div>

                            @Html.HiddenFor(model => model.HouseholdMembers[i].AddressId)
                            @Html.HiddenFor(model => model.HouseholdMembers[i].InviterName)
                            @Html.HiddenFor(model => model.HouseholdMembers[i].InviterId)

                        </div>
                    }
                    <div id="addNewMember" class="row add-other-members">
                        <a href="#"><span></span></a>
                        <p>Add household member</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container submiting">
        <div class="row verify-next-page">
            <p class="col-md-7 pull-left need-help">
                <img src="~/Images/question-mark.png">
                Need help? <a href="https://greenmoney.desk.com/">GreenMoney Customer Care</a>
            </p>

            <input type="submit" value="Send invitation" class="btn pull-right mainBtn">
            @*<input type="button" value="Skip" data-url="@Url.Action("MyProfile")" class="btn skipBtn">*@
            <a href="@Url.Action("MyProfile")" class="btn skipBtn">None</a>

        </div>
    </div>
}


<style type="text/css">
    
.form-group.error input {
    border: 1px solid #b94a48;
}

</style>
