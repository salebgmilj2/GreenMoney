@model GM.ViewModels.Supplier.CompleteSupplierProfileViewModel
@{
    ViewBag.Title = "Complete Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-outer">
    <div class="navbar registration">
        <div class="row">
            <a class="navbar-brand col-md-3" href="@Url.Action("Index", "Home")">
                <img src="~/Images/logo.png" alt="">
            </a>
            <div class="col-md-9">
                <div class="container reg-wizard">
                    <div class="col-md-4 reg-wizard-step complete">
                        <!-- active -->
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#" class="reg-wizard-dot"></a>
                        <div class="reg-wizard-info text-center">Sign up</div>
                    </div>
                    <div class="col-md-4 reg-wizard-step active">
                        <!-- active -->
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#" class="reg-wizard-dot"></a>
                        <div class="reg-wizard-info text-center">Complete profile</div>
                    </div>
                    <div class="col-md-3 reg-wizard-step active">
                        <!-- active -->
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#" class="reg-wizard-dot"></a>
                        <div class="reg-wizard-info text-center">Create reward</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("CompleteProfile", "Supplier", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container main-form">
        <div class="container-inner">
            <div class="content-form text-center">
                <div class="row">
                    <div class="float-none row">
                        <h2>Complete your profile</h2>
                        <p class="additional-information">We need some additional information<br>about your business.</p>
                        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
                    </div>
                    <div class="float-none col-md-5">
                        <h4 class="verify-more-about">A bit more about your business</h4>
                        <div class="row form-group">
                            @Html.TextBoxFor(model => model.BusinessNumberABN, new { placeholder = "ABN", @class = "form-control text-field ABN-field" })
                        </div>
                        <div class="row form-group">
                            @Html.TextBoxFor(model => model.BusinessType, new { placeholder = "Type of business", @class = "form-control text-field type-of-business" })
                            @Html.ValidationMessageFor(model => model.BusinessType)
                        </div>
                        <div class="row form-group">
                            @Html.TextBoxFor(model => model.BussinesWebSite, new { placeholder = "Business website", @class = "form-control text-field business-website" })
                            @Html.ValidationMessageFor(model => model.BussinesWebSite)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container submiting">
        <div class="row verify-next-page">
            <p class="col-md-6 pull-left need-help">
                <img src="~/Images/question-mark.png">
                Need help? <a href="mailto:hello@greenmoney.com.au">Send us an email</a>
            </p>
            <input type="submit" class="btn pull-right col-md-2 mainBtn" value="Next"/>
            @*<a href="addmember.html" class="btn pull-right col-md-2 mainBtn">Next</a>*@
        </div>
    </div>
}

<style type="text/css">
    .input-validation-error {
        border: 1px solid #b94a48;
    }
    .field-validation-error {
        color: #b94a48;
        font-size: 11px;
    }
    .validation-summary-errors li {
        margin-left: 10px; 
        color: #f05b59;
        list-style: outside none none;
    }
    .validation-summary-errors {
        color: #f05b59;
        padding-bottom: 10px;
        padding-top: 10px;
    }
</style>